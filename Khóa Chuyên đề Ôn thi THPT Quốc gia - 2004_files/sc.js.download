//Co chu
var size = parseInt(jQuery(".TextSize").css("font-size"));
var lineheight = parseInt(jQuery(".TextSize").css("line-height"));
if (!size)
    size = 14;
if (!lineheight)
    lineheight = 22;
function IncreaseTextSize() {
    size++;
    lineheight += 2;

    jQuery(".TextSize")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
    jQuery(".TextSize")
		.find("*")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
}

function DecreaseTextSize() {
    size--;
    lineheight -= 2;

    jQuery(".TextSize")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
    jQuery(".TextSize")
		.find("*")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
}

function ResetTextSize() {
    size = 14;
    lineheight = 22;

    jQuery(".TextSize")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
    jQuery(".TextSize")
		.find("*")
		.css('cssText',
			'font-size:' +
			size +
			'px !important; line-height:' +
			lineheight +
			'px !important');
}

