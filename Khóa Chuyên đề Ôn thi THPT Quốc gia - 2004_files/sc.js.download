$(document).ready(function () {
    var popup = document.getElementById('popup');
    $('#close_popup').click(function () {
        $('#popup').css('opacity', '0');
        $('#popup').css('pointer-events', 'none');
    });
    window.onclick = function (e) {
        if (e.target == popup) {
            $('#popup').css('opacity', '0');
            $('#popup').css('pointer-events', 'none');
        }
    }
    document.body.onkeyup = function (e1) {
        if (e1.keyCode == 27) {
            $('#popup').css('opacity', '0');
            $('#popup').css('pointer-events', 'none');
        }
    }
})
